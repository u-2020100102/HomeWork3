@model Cars.Models.Brand;


@using (Html.BeginForm("Edit", "Brand", FormMethod.Post))
{   
    <input id="Id" type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="FirstName" class="col-sm-2 control-label">Brand Name</label>
        <div class="col-sm-10">
            <input id="Name" name="Name" type="text" value="@Model.Name" />
        </div>
    </div>

    <div class="form-group">
        <label for="LastName" class="col-sm-2 control-label">E-mail</label>
        <div class="col-sm-10">
            <input id="Email" name="Email" type="text" value="@Model.Email" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Edit" class="btn" />
        </div>
    </div>
}
