
@model Cars.Models.Brand;

@using (Html.BeginForm("BrandCreate", "Brand", FormMethod.Post))
{
        <div class="form-group">
            <label for="FirstName" class="col-sm-2 control-label">Brand Name</label>
            <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            <label for="LastName" class="col-sm-2 control-label">E-mail</label>
            <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
}