@model Cars.Models.Vehicle;


@using (Html.BeginForm("Edit", "Vehicle", FormMethod.Post))
{   
    <input id="Id" type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="col-sm-2 control-label">Brand Name</label>
        <div class="col-sm-10">
            <input id="CarPlate" name="CarPlate" type="text" value="@Model.CarPlate" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">KM</label>
        <div class="col-sm-10">
            <input id="Km" name="Km" type="text"  value="@Model.Km"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Model</label>
        <div class="col-sm-10">
            <input id="Model" name="Model" type="text" value="@Model.Model"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Color</label>
        <div class="col-sm-10">
            <input id="Color" name="Color" type="text" value="@Model.Color"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Gear Type</label>
        <div class="col-sm-10">
            <input id="GearType" name="GearType" type="text"  value="@Model.GearType"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Brand</label>
        <div class="col-sm-10">
            <select id="brand" name="brand">
                {
                @foreach (var brand in @ViewBag.Brands as Cars.Models.Brand[])
                {
                    @if(brand.Id == Model.brand.Id)
                    {
                        <option value="@brand.Id" selected>@brand.Name</option>
                    }
                    <option value="@brand.Id" >@brand.Name</option>
                }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Edit" class="btn" />
        </div>
    </div>
}
